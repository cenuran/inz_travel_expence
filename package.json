{
    "name": "Travel_expence",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6",
        "@sap/hana-client": "^2.16.26",
        "express": "^4",
        "hdb": "^0.19.0"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "4.6.1",
        "@sap/ux-specification": "^1.108.6",
        "@sap/xssec": "^3.2.17",
        "passport": "^0.6.0",
        "rimraf": "^3.0.2",
        "sqlite3": "^5"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-frontend": "cds watch --open frontend/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy Travel_expence --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-budget": "cds watch --open budget/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "engines": {
        "node": ">=6.9.1"
    },
    "cds": {
        "build": {
            "tasks": [
                {
                    "for": "hana",
                    "dest": "../db"
                },
                {
                    "for": "node-cf"
                }
            ]
        },
        "requires": {
            "db": {
                "kind": "hana-cloud"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}
